.header
  = render "layouts/header"
  - breadcrumb :category
  = render "layouts/bread"

.wrapper
  .mid-wrapper
    .item
      .item__name
        .item-category
          %h3.item-category__title
            #{@category.name}の商品一覧
        .item__content
          %div
            %ul.item-list
              = render partial: 'items/item_temprate', collection: @items, as: "item"
      = paginate(@items)
      .spacial-description
        .spacial-description-title
          %h3 #{@category.name}
.footer
  = render "layouts/footer"
  = render 'layouts/sell-btn'