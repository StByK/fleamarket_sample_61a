          %i.fa.fa-twitter
      %li.pinterest
        = link_to "http://pinterest.com/pin/create/button/?url=https%3A%2F%2Fitem.mercari.com%2Fjp%2Fm26787147414%2F&media=https%3A%2F%2Fstatic.mercdn.net%2Fitem%2Fdetail%2Forig%2Fphotos%2Fm26787147414_1.jpg%3F1572149275&description=%E3%83%A1%E3%83%AB%E3%82%AB%E3%83%AA%E5%95%86%E5%93%81%3A%20%E3%82%B9%E3%82%BF%E3%83%BC%E3%83%90%E3%83%83%E3%82%AF%E3%82%B9%E3%80%80%E3%83%9B%E3%83%AA%E3%83%87%E3%83%BC%E3%80%80%E3%82%B9%E3%83%86%E3%83%83%E3%82%AB%E3%83%BC%E3%80%80%E7%BC%B6%E4%BB%98%E3%81%8D%20%23%E3%83%A1%E3%83%AB%E3%82%AB%E3%83%AA" do
          %i.fa.fa-pinterest
  - if @user_items
    .items-in-user-profile
      %section.items-box-view
        %h2.items-box-view-head
          = link_to "" do
            #{@seller.nickname}さんのその他の出品
        %ul.items-box-content
          - @user_items.each do |item|
            %li.items-box
              = link_to "" do
                %figure.items-box-photo
                  = image_tag (""), class: "lazyload"
                .items-box-body
                  %h3.items-box-name #{item.name}
                  .items-box-num
                    .items-box-price ¥#{item.price}

  - if @category_items
    .items-in-user-profile
      %section.items-box-view
        %h2.items-box-view-head
          = link_to "" do
            #{@category_grand_child.name}(#{@category_parent.name}) その他の商品
        %ul.items-box-content
          - @category_items.each do |item|
            %li.items-box
              = link_to "" do
                %figure.items-box-photo
                  = image_tag "", class: "lazyload"
                .items-box-body
                  %h3.items-box-name.font-2 #{item.name}
                  .items-box-num
                    .items-box-price.font-5 ¥#{item.price}

  %nav.bread-crumbs
    %ul
      %li
        = link_to "" do
          メルカリ
          %span
        %i.fa.fa-chevron-right
      %li
        %span #{@item.name}
.footer
  = render "layouts/footer"