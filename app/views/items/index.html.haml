.header
  = render "layouts/header"

.wrapper
  .mid-wrapper
    .main-images
      =link_to root_path, class: "main-link" do
        .main-link__body
      .slider
        .slider-frame
          %ul.slider-list
            %li.slider-list__slide
              =image_tag ("top2.jpg"), class: "image-gazou"
              =image_tag ("top2.jpg"), class: "image-gazou"
              =link_to root_path, class: "slider-image1" do
                .slider-img
            %li.slider-list__slide
              .main-image
