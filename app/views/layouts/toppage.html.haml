.wrapper
  .mid-wrapper
    .main-images
      =link_to root_path, class: "main-link" do
      .slider-body
        .slider-frame
          %ul.slider-list
            %li.slider-slide
              =link_to root_path,  do
                .slider-img
            %li.slider-slide.slide-visible
              .main-image
                .main-image__area
                  = image_tag ("top-banner-main-device.svg")
                  -# %img{src: "main-image__body"}/
                  .main-image__text
                    .main-imag__text__heading
                      "スマホでかんたん"
                      %br>/
                      "フリマアプリ"
                    %p.main-image__text
                      "メルカリはスマホカメラからすぐに出品できる"
                      %br/
                      "購入時も安心な独自システムアプリです"
                    .main-image__btn
                      = image_tag ("main-footer/app-store.svg")
                        -# %img{src: "#"}/
                      = image_tag ("main-footer/google-play.svg")
                        -# %img{src: "#"}/
        .slider-control-centerleft
          .slider-control-left-img
        .slider-control-centerright
          .slider-control-right-img
        .slider-control-bottomcenter
          .slider-contorol-bottom__dot
            %span
            %span
        :css
          .slider-slide > img { width: 100%; display: block; }
              .slider-slide > img:focus { margin: auto; }
