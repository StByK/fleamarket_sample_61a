.user-page  
  .side-area
    = render 'users/side_bar'
  .main-area
    .notice
      .notice-top      
        = link_to users_path, class: "notice-link" do
          .icon
            =image_tag "nophoto_img.png", size: "60x60"
          .name
            ユーザー名
          .mycount
            .evaluation
              評価
            .evaluation-count
              数
            .exhibit
              出品数
            .exhibit-count
              数
      .tab-wrap
        %input#tab1-1.tab-switch{checked: "checked", name: "tab_btn1", type: "radio"}/
        %label.tab-label{for: "tab1-1"}
          %h2 お知らせ
        #notice-content.tab-content
          .label
          .notice-list
            = link_to users_path, class: "notice-all" do
              一覧を見る

        %input#tab1-2.tab-switch{name: "tab_btn1", type: "radio"}/
        %label.tab-label{for: "tab1-2"} 
          %h2 やる事リスト
        #todo-content.tab-content
          .no-label
            .monochro-image
              =image_tag "mono_image.png", size: "200x200"
            %h2 現在、やることリストはありません
          // .label

    .purchase
      .purchase-top
        %h2 購入した商品
      .tab-wrap
        %input#tab2-1.tab-switch{checked: "checked", name: "tab_btn2", type: "radio"}/
        %label.tab-label{for: "tab2-1"}
          %h2 取引中
        #trading-content.tab-content
          .no-label
            .monochro-image
              =image_tag "mono_image.png", size: "200x200"
            %h2 取引中の商品がありません
          // .label

        %input#tab2-2.tab-switch{name: "tab_btn2", type: "radio"}/
        %label.tab-label{for: "tab2-2"} 
          %h2 過去の取引
        #traded-content.tab-content
          .no-label
            .monochro-image
              =image_tag "mono_image.png", size: "200x200"
            %h2 過去に取引した商品がありません
          // .label
