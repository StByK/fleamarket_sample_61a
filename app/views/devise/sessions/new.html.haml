.single-container
  .single-header
    %h1.single-header__logo
      = link_to do
        =image_tag "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?128691313", alt: "mercari", class: "mercari-logo"
  %main.single-main
    %section.single-main__container
  .login-panel
    .login-no-account
      %p アカウントをお持ちでない方はこちら
      .sign-up
        =link_to new_user_registration_path, class: "sign-up-btn" do
          新規会員登録
    .single-main__container__inner__content
      =link_to user_facebook_omniauth_authorize_path, method: :post, class: "contents__btn contents__btn__facebook" do
        .single-main__container__inner__content__icon.fab.fa-facebook-square
        Facebookでログイン
      =link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: "contents__btn contents__btn__google" do
        =image_tag "https://i.gyazo.com/52d0a24f7c45cfa2f57c0328001c4204.png", class: "contents__btn__google__logo"
        Googleでログイン

    = form_for(resource, as: resource_name, url: user_session_path) do |f|
      .login-form-inner
        .form-group
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "input-default"
        .form-group
          = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "input-default"
        .form-group
          = recaptcha_tags
        = f.submit 'ログイン', class: 'login'
        = link_to "パスワードお忘れの方", "#", class: 'password-forget'

  = render "devise/shared/login_footer"
