.single-container
  .single-header
    %h1.single-header__logo
      = link_to "#" do
        =image_tag "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?1248199994", alt: "mercari", class: "mercari-logo"
    %nav.progress-bar
      %ol.clearfix
        %li.end
          会員情報
          .progress-status
        %li.end
          電話番号認証 
          .progress-status
        %li.now
          お届け先住所入力
          .progress-status
        %li
          支払い方法
          .progress-status
        %li
          完了
          .progress-status
  %main.single-main
    %section.single-main__container
      %h2.single-main__container__header 住所入力
      = form_for '' do |f|
        .registration-form
          .registration-form__content
            .form-group
              %label{for: "nickname"} お名前
              %span.form-require 必須
              %input.input-default{name: "nickname", placeholder: " 例) 山田", type: "text", value: ""}/
              %input.input-default{name: "nickname", placeholder: " 例) 彩", type: "text", value: ""}/
            .form-group
              %label{for: "nickname"} お名前カナ
              %span.form-require 必須
              %input.input-default{name: "nickname", placeholder: " 例) ヤマダ", type: "text", value: ""}/
              %input.input-default{name: "nickname", placeholder: " 例) アヤ", type: "text", value: ""}/  
            .form-group
              %label{for: "address"} 郵便番号
              %span.form-require 必須
              %input.input-default{name: "nickname", placeholder: " 例) 123-4567", type: "text", value: ""}/
            .form-group
              %label{for: "prefecture"} 都道府県
              %span.form-require 必須
              .select-wrap__address
                %select.select-wrap__default{name: "prefectures"}
                  = f.collection_select :prefecture_id, Prefecture.all, :id, :name
                %i.fas.fa-angle-down
            .form-group
              %label{for: "municipalities"} 市町村
              %span.form-require 必須
              %input.input-default{name: "municipalities", placeholder: " 例) 横浜市緑区", type: "text", value: ""}/  
            .form-group
              %label{for: "address"} 番地
              %span.form-require 必須
              %input.input-default{name: "nickname", placeholder: " 例) 青山1-1-1", type: "text", value: ""}/  
            .form-group
              %label{for: "address"} 建物名
              %span.form-optional 任意
              %input.input-default{name: "nickname", placeholder: " 例) 柳ビル103", type: "text", value: ""}/  
            .form-group
              %label{for: "tel"} 電話
              %span.form-optional 任意
              %input.input-default{name: "nickname", placeholder: " 例) 09012345678", type: "text", value: ""}/      
              %button.btn-default.btn-red{type: "submit"} 次へ進む   
    = render "devise/shared/login_footer"
