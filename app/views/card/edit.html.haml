.wrapper-card
  = render "layouts/login_header"
  - breadcrumb :identification, @user
  = render "layouts/bread"  
  .container-card
    .content-side-bar
      = render partial:"layouts/side_bar"
    .content
      .content__chapter1
        %h2.content__chapter1__head 
          クレジットカード情報入力
        = form_tag(card_index_path, method: :post, action: "create", id: 'charge-form', class: 'card-form', html: { name: "inputForm" }) do |f|
          .card-form__input
          .card-form__box
            .form-number
              %label.form-number__payment カード番号
              %span.form-number__require 必須
              = text_field_tag "card_number", "", class: "form-number__input", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
              %ul.form-number__error-text
              %ul.form-number__card-list
                %li.form-number__card-list__visa
                  = image_tag"visa.svg",class:"form-number__card-list__visa"
                %li.form-number__card-list__master
                  = image_tag"master-card.svg",class:"form-number__card-list__master"
                %li.form-number__card-list__saison
                  = image_tag"saison-card.svg",class:"form-number__card-list__saison"
                %li.form-number__card-list__jcb
                  = image_tag"jcb.svg",class:"form-number__card-list__jcb"
                %li.form-number__card-list__american
                  = image_tag"american_express.svg",class:"form-number__card-list__american"
                %li.form-number__card-list__dainers
                  = image_tag"dinersclub.svg",class:"form-number__card-list__dainers"
                %li.form-number__card-list__discover
                  = image_tag"discover.svg",class:"form-number__card-list__discover"
            .form-signup
              %label.form-signup__expire 有効期限
              %span.form-signup__require 必須
              %br
              .form-signup__month
                %select.form-signup__month__select#exp_month{name: "exp_month", type: "text"}
                  %option{value:"1"} 01
                  %option{value:"2"} 02
                  %option{value:"3"} 03
                  %option{value:"4"} 04
                  %option{value:"5"} 05
                  %option{value:"6"} 06
                  %option{value:"7"} 07
                  %option{value:"8"} 08
                  %option{value:"9"} 09
                  %option{value:"10"} 10
                  %option{value:"11"} 11
                  %option{value:"12"} 12               
                %i.form-signup__month__icon.fas.fa-chevron-down
              %span.form-signup__str 月
              %br
              .form-signup__year
                %select.form-signup__month__select#exp_year{name: "exp_year", type: "text"}
                  %option{value:"19"} 19
                  %option{value:"20"} 20
                  %option{value:"21"} 21
                  %option{value:"22"} 22
                  %option{value:"23"} 23
                  %option{value:"24"} 24
                  %option{value:"25"} 25
                  %option{value:"26"} 26
                  %option{value:"27"} 27
                  %option{value:"28"} 28
                  %option{value:"29"} 29
                %i.form-signup__month__icon.fas.fa-chevron-down
              %span.form-signup__str 年
            .form-security
              %label.form-security__expire セキュリティーコード
              %span.form-security__require 必須
              = text_field_tag "cvc", "", class: "form-security__input", placeholder: "カード背面4桁もしくは3桁の番号", maxlength: "4", id: "cvc"
              %ul.form-security__error-message
              .form-security__info 
                %span.form-security__info__question ?
                カード裏面の番号とは？
            .btn-default#card_token    
              = submit_tag "追加する", id: "token_submit", class: "form-btn"
    
.footer
  = render "layouts/footer"
  = render 'layouts/sell-btn'